[mysqld]
# Змінити користувача на root
user = root

# Використовувати нестандартний порт
port = 3000

# Змінити каталог даних
datadir = /data

# Увімкнути логування повільних запитів
slow_query_log = 1

# Вказати шлях до файлу повільних запитів
slow_query_log_file = /data/mysql-slow.log

# Закоментовано лог помилок, як вимагається
# log_error = /var/log/mysql/error.log
